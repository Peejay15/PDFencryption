<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDFencryption.Views.ResultsPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Here is your boarding pass information:"
                   VerticalOptions="CenterAndExpand"
                   TextColor="Black"
                   HorizontalOptions="CenterAndExpand" />


            <Label x:Name = "MainLabel" HorizontalOptions="Center"/>
            
            <Button Text="Decrypt"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Decrypt_Button_Clicked"
                    BackgroundColor="#bbff9c"
                    WidthRequest="150"/>
            
            
            <Button Text="Scan Again"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Scan_Again_Clicked"
                    BackgroundColor="#8bcbfe"
                    WidthRequest="300"/>

            
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>