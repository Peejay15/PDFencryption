<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDFencryption.Views.ResultsPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <!-- label that is displayed above the boarding pass information-->
            <Label Text="Here is your boarding pass information:"
                   VerticalOptions="CenterAndExpand"
                   TextColor="Black"
                   HorizontalOptions="CenterAndExpand" />

            <!--Encrypted and Decrypted Text is displayed through this label-->
            <Label x:Name = "MainLabel" HorizontalOptions="Center" TextColor="Black"  Padding="50,0"/>

            <!-- Displays Decryption button -->
            <Button Text="Decrypt"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Decrypt_Button_Clicked"
                    BackgroundColor="#bbff9c"
                    WidthRequest="150"/>

            <!--Dsiplays Scan Again button -->
            <Button Text="Scan Again"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="Scan_Again_Clicked"
                    BackgroundColor="#8bcbfe"
                    WidthRequest="300" Margin="0,0,0,50"
                    
                     />

            
            

        </StackLayout>
    </ContentPage.Content>
</ContentPage>